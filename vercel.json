{
  "version": 2,
  "name": "shopping-companion-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "@api_url",
    "VITE_APP_ENV": "production"
  },
  "build": {
    "env": {
      "VITE_API_URL": "@api_url",
      "VITE_APP_ENV": "production"
    }
  }
}
